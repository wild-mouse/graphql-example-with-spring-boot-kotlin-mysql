<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wildmouse.calender.mapper.SchedulesMapper">
    <resultMap type="com.wildmouse.calender.entity.Schedule" id="scheduleMap">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="date" property="date"/>
        <result column="all_day" property="allDay"/>
    </resultMap>

    <select id="getSchedules" resultMap="scheduleMap">
        select * from schedules
    </select>
</mapper>